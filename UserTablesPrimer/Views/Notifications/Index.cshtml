@model IEnumerable<UserTablesPrimer.Models.Notification>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<center>
    <h2>Notifications</h2>
</center>

@if (Model.Count() == 0)
{
    <hr />
    <center>
        <h4>There are no new notifications to be shown :(</h4>
        <div id="notifications">
        </div>
    </center>
}
else
{
    <br />
    foreach (var item in Model)
    {
        <center>
            <div id="notifications">
                <div class="notificationDiv">
                    <span>@item.Message</span> &nbsp;&nbsp;&nbsp;&nbsp;
                    <span class="newNotSpan">
                        New!
                    </span>
                </div>
            </div>
        </center>
    }
}

<hr/>

